<div class="navbar-header">
<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
  <span class="icon-bar"></span>
  <span class="icon-bar"></span>
  <span class="icon-bar"></span>
</button>
<%= link_to "Poppin!", root_path, :class => 'navbar-brand' %>
</div>
<div class="collapse navbar-collapse">
  <ul class="nav navbar-nav">
    <% if logged_in? %>
    
    <li class="dropdown">
      <%= link_to '#', class: 'dropdown-toggle', 'data-toggle' => 'dropdown' do %>My Poppin <b class="caret"></b>
      <% end %>
      <ul class="dropdown-menu">
        <li>
          <%= link_to user_path(current_user) do %> 
            <span class="glyphicon glyphicon-list-alt"></span>
            My Slots
          <% end %>
        </li>
        <li>
          <%= link_to slots_path do %> 
            <span class="glyphicon glyphicon-edit"></span>
            Manage Slots
          <% end %>
        </li>
        <li class="divider"></li>
        <li>
          <%= link_to edit_user_path(current_user) do %> 
            <span class="glyphicon glyphicon-pencil"></span>
            Edit Profile
          <% end %>
        </li>
      </ul>
    </li>
    
    <li class="dropdown">
      <%= link_to '#', class: 'dropdown-toggle', 'data-toggle' => 'dropdown' do %>My Friends <b class="caret"></b>
      <% end %>
      <ul class="dropdown-menu">
        <li>
          <%= link_to friends_all_path do %> 
            <span class="glyphicon glyphicon-eye-open"></span>
            View All
            <% end %>
        </li>
        <% if current_user.friends.count > 0 %>
        <li class="divider"></li>
          <% current_user.friends.each do |friend| %>
            <li>
              <%= link_to user_path(friend) do %> 
              <span class="glyphicon glyphicon-user"></span>
              <%= user_full_name(friend) %>
              <% end %>
            </li>
          <% end %>
        <% end %>
        <li class="divider"></li>
        <li>
          <%= link_to user_friends_path(current_user) do %> 
            <span class="glyphicon glyphicon-edit"></span>
            Manage Friends
            <% end %>
        </li>
      </ul>
    </li>
  </ul>
  <ul class="nav navbar-nav navbar-right">
    <li><%= link_to "Welcome #{current_user.first_name}", user_path(current_user.id) %></li>
    <li><%= link_to 'Logout', logout_path %></li>
    <% else %>
    <li><%= link_to 'Register', register_path %></li>
    <% end %>
  </ul>
  
</div><!--/.nav-collapse -->