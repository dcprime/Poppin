<div class="navbar-header">
<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
  <span class="icon-bar"></span>
  <span class="icon-bar"></span>
  <span class="icon-bar"></span>
</button>
<%= link_to "Poppin!", root_path, :class => 'navbar-brand' %>
</div>
<div class="collapse navbar-collapse">
  <ul class="nav navbar-nav">
    <% if logged_in? %>
    <li><%= link_to 'My Poppin Slots', user_path(current_user.id) %></li>
    <li class="dropdown">
      <%= link_to '#', class: 'dropdown-toggle', 'data-toggle' => 'dropdown' do %>My Friends <b class="caret"></b>
      <% end %>
      <ul class="dropdown-menu">
        <% current_user.friends.each do |friend| %>
          <li>
            <%= link_to user_path(friend) do %> 
            <span class="glyphicon glyphicon-user"></span>
            <%= user_full_name(friend) %>
            <% end %>
          </li>
        <% end %>
        <li class="divider"></li>
        <li>
          <%= link_to 'Manage Friends', user_friends_path(current_user) %>
        </li>
      </ul>
    </li>
  </ul>
  <ul class="nav navbar-nav navbar-right">
    <li><%= link_to "Welcome #{current_user.first_name}", user_path(current_user.id) %></li>
    <li><%= link_to 'Logout', logout_path %></li>
    <% else %>
    <li><%= link_to 'Register', register_path %></li>
    <% end %>
  </ul>
  
</div><!--/.nav-collapse -->