<%= render 'shared/content_title', title: "Manage Poppin Slots" %>

<%= render 'shared/errors', obj: @slot %>

<%= render 'shared/slots_display', title: "#{user_full_name(@user)}'s Poppin Slots", user: @user %>
<br/>

<div class="row">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">Add a New Slot</h3>
    </div>
    <div class="panel-body">
      <%= form_for @slot do |f| %>
        <div class="form-group">
          <%= f.label :day_select do %>
          <h4>Select a day</h4>
          <div class="radio">
            <label><%= f.radio_button :day, 'Mondays' %>
            Mondays &nbsp;</label>
            <label class="radio-inline"><%= f.radio_button :day, 'Tuesdays' %>
            Tuesdays &nbsp;</label>
            <label class="radio-inline"><%= f.radio_button :day, 'Wednesdays' %>
            Wednesdays</label>
          </div>
          <div class="radio">
            <label><%= f.radio_button :day, 'Thursdays' %>
            Thursdays &nbsp;</label>
            <label class="radio-inline"><%= f.radio_button :day, 'Fridays' %>
            Fridays &nbsp;</label>
            <label class="radio-inline"><%= f.radio_button :day, 'Saturdays' %>
            Saturdays</label>
          </div>
          <div class="radio">
            <label><%= f.radio_button :day, 'Sundays' %>
            Sundays</label>
          </div>
          <% end %>
        </div>
        <div class="form-group">
          <%= f.label 'From' %>
          <%= f.text_field :start_time, class: 'form-control', placeholder: 'Enter start time - eg. 10am, noon, sunrise' %>
        </div>
        <div class="form-group">
          <%= f.label 'To' %>
          <%= f.text_field :end_time, class: 'form-control', placeholder: 'Enter end time - eg. 6pm, midnight, sunset' %>
        </div>
        <div class="form-group">
          <%= f.label "Slot description" %>
          <%= f.text_area :label, class: 'form-control', placeholder: 'Pop in for board games!' %>
        </div>
      <%= f.submit 'Add Slot', class: 'btn btn-success' %>
      <% end %>
    </div>

  </div>
</div>